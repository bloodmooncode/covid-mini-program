@import "../../../style/main.wxss";
@import "../../../style/icon.wxss";

/* miniprogram/pages/onDutyindex/captain/captain.wxss */
.picker {
	line-height: 100rpx;
	font-size: 28rpx;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
  text-align: right;
}

.title {
	text-align: justify;
	padding-right: 30rpx;
	font-size: 30rpx;
	position: relative;
	height: 60rpx;
	line-height: 60rpx;
}

.group {
	background-color: var(--white);
	display: flex;
	align-items: center;
	min-height: 100rpx;
	justify-content: space-between;
}

picker {
	flex: 1;
	padding-right: 40rpx;
	overflow: hidden;
  position: relative;
  margin: 0 30rpx;
}

.picker::after {
	font-family: "cuIcon";
	display: block;
	content: "\e6a3";
	position: absolute;
	font-size: 34rpx;
	color: var(--grey);
	line-height: 100rpx;
	width: 60rpx;
	text-align: center;
	top: 0;
	bottom: 0;
	right: -20rpx;
	margin: auto;
}