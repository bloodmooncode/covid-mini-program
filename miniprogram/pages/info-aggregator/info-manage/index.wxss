.box {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding: 20rpx 50rpx;
  border-bottom: 1px solid #ECDDDD;
}

.info {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  font-size: 35rpx;
}

.type{
  font-weight: bolder;
}

.text-box.contact-box {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
}

.text.contact {
  font-weight: bold;
  width: 100%;
}

.image-box {
  margin: 20rpx 0;
  width: 100%;
  align-items: center;
  display: flex;
  flex-direction: row;
}

.image {
  margin: 1%;
  width: 48%;
  height: 320rpx;
  border: 1px solid gray;
  border-radius: 20rpx;
}

.date-box {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
}

.date {
  color: #C8C8C8;
}

.btn-box {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  justify-content: flex-end;
}

.btn {
  border-radius: 20rpx;
  border: 1px solid #9805a1;
  text-align: center;
  padding: 10rpx 30rpx;
  border-radius: 35rpx;
  margin-left: 10rpx;
}

.refuse{
  color: #9805a1;
  background-color: white;
}

.pass{
  color: white;
  background-color: #9805a1;
}

.nav_top {
  /*设置行内块级元素（没使用定位）*//* display: inline-block; */
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: absolute;
  /* top: 0; */
  left: 0;
  flex: 1;
  width: 100%;
  height: 70rpx;
  margin-bottom: 70prx;
  /*主盒子设置背景色为灰色*/
  text-align: center;
  margin-top: 5rpx;
}

.nav_top .nav_top_items {
  background: #ffffff;
  /*每个高30px*/
  height: 70rpx;
  width: 100%;
  /*垂直居中*/
  line-height: 40px;
  /*再设上下padding增加高度，总高42px*/
  padding:  0;
  /*只设下边线*/
  border-right: 1px solid #ffffff;
  /*文字14px*/
  font-size: 20rpxx;
  text-align: center;
}

.nav_top .nav_top_items.active {
  /*背景色变成白色*/
  color: 	#9805a1;
  border-bottom: 3px solid #9805a1;
}

.nav_down_finding {
  /*下侧盒子先竖向排布*/
  display:flex;
  width:100%;
  /* height:625rpx; */
  flex-direction: column;
  background-color:#f6f6f6;
  justify-content: center;
  margin-top: 70rpx;
}