.box {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding: 20rpx 50rpx;
  border-bottom: 1px solid #ECDDDD;
}

.info {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  font-size: 35rpx;
}

.text-box.contact-box {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
}

.text.contact {
  font-weight: bold;
  width: 100%;
}

.image-box {
  margin: 20rpx 0;
  width: 100%;
  align-items: center;
  display: flex;
  flex-direction: row;
}

.image {
  margin: 1%;
  width: 48%;
  height: 280rpx;
  border: 1px solid gray;
  border-radius: 20rpx;
}

.date-box {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
}

.date {
  color: #C8C8C8;
}