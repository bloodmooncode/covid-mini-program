    <button style="width: 600rpx;margin: 50rpx;height: 100rpx;align-items: center;line-height:70rpx;border-radius: 20rpx;color: #9805a1;border: 1px solid #9805a1;background-color: #ffffff;" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" wx:if="{{!isAdmin}}">管理员验证</button>
    <button style="width: 600rpx;margin: 50rpx;height: 100rpx;align-items: center;line-height:70rpx;border-radius: 20rpx;color: #9805a1;border: 1px solid #9805a1;background-color: #ffffff;" bindtap="linkToManage" wx:if="{{isAdmin}}">信息审核</button>
