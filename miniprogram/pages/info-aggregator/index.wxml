<view class="box">
  <view class="image-view" bindtap="linkToInfo" data-type="群聊汇总">
    <image class="image-style" src="cloud://online-1g92hfy633c6a119.6f6e-online-1g92hfy633c6a119-1309017282/info-aggregator/chat.png"></image>
    <text class="image-text">群聊汇总</text>
  </view>
  <view class="div-view"></view>

  <view class="image-view" bindtap="linkToInfo" data-type="紧急联系方式">
    <image class="image-style" src="cloud://online-1g92hfy633c6a119.6f6e-online-1g92hfy633c6a119-1309017282/info-aggregator/emergency.png"></image>
    <text class="image-text">紧急联系方式</text>
  </view>
  <view class="div-view"></view>

  <view class="image-view" bindtap="linkToInfo" data-type="爱心捐赠">
    <image class="image-style" src="cloud://online-1g92hfy633c6a119.6f6e-online-1g92hfy633c6a119-1309017282/info-aggregator/donaton.png"></image>
    <text class="image-text">爱心捐赠</text>
  </view>
  <view class="div-view"></view>

  <view class="image-view" bindtap="linkToInfo" data-type="其他">
    <image class="image-style" src="cloud://online-1g92hfy633c6a119.6f6e-online-1g92hfy633c6a119-1309017282/info-aggregator/others.png"></image>
    <text class="image-text">其他</text>
  </view>
  <view class="div-view"></view>
  <view class="btn-box">
